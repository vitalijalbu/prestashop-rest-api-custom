{
    "name": "prestashop/myrestapi",
    "description": "My REST API module for PrestaShop",
    "type": "prestashop-module",
    "license": "AFL-3.0",
    "authors": [
        {
            "name": "Jules",
            "email": "jules@example.com"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "lcobucci/jwt": "^4.3 || ^5.0"
    },
    "autoload": {
        "psr-4": {
            "MyRestApi\\": "src/",
            "MyRestApi\\Services\\": "services/",
            "MyRestApi\\Dto\\": "dto/",
            "MyRestApi\\Rto\\": "rto/"
        },
        "classmap": ["myrestapi.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "MyRestApi\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "preferred-install": "dist",
        "prepend-autoloader": false
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (file_exists('vendor/autoload.php')) { copy('vendor/autoload.php', 'vendor/prestashop_autoload.php'); }\""
        ],
        "post-update-cmd": [
            "@php -r \"if (file_exists('vendor/autoload.php')) { copy('vendor/autoload.php', 'vendor/prestashop_autoload.php'); }\""
        ],
        "test": "vendor/bin/phpunit"
    }
}
